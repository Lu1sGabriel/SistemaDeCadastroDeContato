@{
    ViewData["Title"] = "Edição de Contato";
}

<div class="text-center">
    <h1 class="display-4">Edição de Contatos</h1>
</div>

<form>
    <div class="mb-3">
        <label class="form-label">Nome</label>
        <input type="text" class="form-control" placeholder="Digite o nome do contato">
    </div>
    <div class="mb-3">
        <label class="form-label">E-mail</label>
        <input type="email" class="form-control" placeholder="Digite o E-mail do contato">
    </div>
    <div class="mb-3">
        <label class="form-label">Celular</label>
        <input type="number" class="form-control" placeholder="Digite o celular do contato">
    </div>
    <div class="d-grid gap-2">
        <button class="btn btn-primary" type="submit">Editar</button>
        <a class="btn btn-secondary" role="button" asp-controller="Contato" asp-action="Index">Voltar</a>
    </div>
</form>

<style>
    /* Remove os controles para inputs do tipo number */
    input[type=number]::-webkit-inner-spin-button,
    input[type=number]::-webkit-outer-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }

    input[type=number] {
        -moz-appearance: textfield; /* Para Firefox */
    }
</style>